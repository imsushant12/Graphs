#include <bits/stdc++.h>
#include <iostream>
#include <vector>
using namespace std;

vector <int> graph[10];
void createGraph(vector <int> graph[] , int i , int j)              //list STL can be used as well
{
    graph[i].push_back(j);
    //graph[j].push_back(i);
}

void display(vector<int> graph[], int v)
{
    for(int i=1 ; i<=v ; i++)
    {
        cout << i << "--->";
        vector<int> :: iterator it;
        for(it = graph[i].begin(); it != graph[i].end(); ++it)
            cout << *it << " ";
     cout << endl;
   }
}

int main()
{
    int choice,V,e,i;
    cout<<"\nEnter the number of vertex : ";
    cin>>V;


    while(1)
    {
        cout<<"\n1. Create Graph"<<endl;
        cout<<"2. To view List-matrix"<<endl;
        cout<<"3. EXIT"<<endl;
        cout<<"Enter your choice"<<endl;
        cin>>choice;
        switch(choice)
        {
        case 1:
            {
            for(i=1 ; i<=V ; i++)
                {
                    while(1)
                    {
                        cout<<"Enter the edges from '"<<i<<"' or press -1 : ";
                        cin>>e;
                        if(e == -1)
                            break;
                        createGraph(graph , i , e);
                    }
                }
                break;
            }

        case 2:
            {
                display(graph , V);
                break;
            }

        case 3:
            exit(0);
            break;

        default:
            cout<<"\nINVALID CHOICE..."<<endl;
        }
    }
    return 0;
}

